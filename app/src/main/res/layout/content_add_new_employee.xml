<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            android:text="Add Employee"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="30dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/download" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="160dp"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme">

                <EditText
                    android:id="@+id/edt_firstname"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:hint="First Name"
                    android:inputType="textPersonName"
                    android:textSize="12sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme">

                <EditText
                    android:id="@+id/edt_lastname"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200dp"
                    android:hint="Last Name"
                    android:inputType="textPersonName"
                    android:textSize="12sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:theme="@style/AppTheme">

                <EditText
                    android:id="@+id/edt_gender"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Gender"
                    android:inputType="textEmailAddress"
                    android:textSize="12sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                android:theme="@style/AppTheme">

                <EditText
                    android:id="@+id/edt_Birthdate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="110dp"
                    android:hint="Date of Birth"
                    android:inputType="text"
                    android:textSize="12sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="165dp">

                <EditText
                    android:id="@+id/edt_Address"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:hint="Address"
                    android:textSize="12sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="165dp"
                android:theme="@style/AppTheme">

                <EditText
                    android:id="@+id/edt_Hiredate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="180dp"
                    android:layout_marginTop="165dp"
                    android:hint="Hire Date"
                    android:textSize="12sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="225dp"
                android:theme="@style/AppTheme">

                <EditText
                    android:id="@+id/edt_Position"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Position"
                    android:textSize="12sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="275dp"
                android:theme="@style/AppTheme">

                <EditText
                    android:id="@+id/edt_Department"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Department"
                    android:textSize="12sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="335dp"
                android:theme="@style/AppTheme"
                android:id="@+id/salary"
                >

                <EditText
                    android:id="@+id/edt_Salary"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Salary"
                    android:textSize="12sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme"
                android:layout_below="@+id/salary"
                >

                <EditText
                    android:id="@+id/edt_Bonus"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Bonus"
                    android:textSize="12sp"
                    android:inputType="number"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_registerart"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="440dp"
                android:background="@drawable/btn_bg"
                android:gravity="center"
                android:text="Done"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>