<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dell.hrapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".EmployeeApp"
        >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Administration"
            android:label="@string/title_activity_administration"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddNewEmployee"
            android:label="@string/title_activity_add_new_employee"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShowAllEmployees"
            android:label="@string/title_activity_show_all_employees"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShowDetail"
            android:label="@string/title_activity_show_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditEmployee"
            android:label="@string/title_activity_edit_employee"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Report"
            android:label="@string/title_activity_report"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShowDepartmentSalary"
            android:label="@string/title_activity_show_department_salary"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
